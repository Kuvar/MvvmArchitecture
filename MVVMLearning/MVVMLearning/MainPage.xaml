<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MVVMLearning"
             x:Class="MVVMLearning.MainPage">
    <StackLayout Orientation="Vertical" Spacing="20" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <Label Text="{Binding Name}" 
           VerticalOptions="Center" 
           HorizontalOptions="Center" FontSize="Large" FontAttributes="Bold" />
        <Label Text="{Binding Time}" 
           VerticalOptions="Center" 
           HorizontalOptions="Center" FontSize="Large" FontAttributes="Bold" TextColor="Red" />
    </StackLayout>
	

</ContentPage>
